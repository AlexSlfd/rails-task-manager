<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task.id) %>
    <button><%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </button>
    </li>
  <% end %>
</ul>

<button><%= link_to "Add new task", new_task_path %></button>
